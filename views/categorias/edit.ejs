<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editando categoria: <%= categoria.nombre %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>

<div class="col py-3">

    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Categorías / </a></li>
                    <li class="breadcrumb-item-active"><%= categoria.nombre %></li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Id de categoria:</b>
            <%= categoria._id %>
        </div>
    </div>

</div>



<form action="/edit/<%= categoria._id %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="firstName">Nombre de la Categoría</label>
            <input type="text" class="form-control" id="nombre" name="nombre" value="<%= categoria.nombre %>" placeholder="nombre" required>
        </div>
    </div>


    <div class="form-group mb-4">
        <label for="details">Descripción</label>
        <textarea class="form-control" name="descripcion" id="descripcion" cols="30" rows="12" placeholder="Descripcion">
            <%= categoria.descripcion %>
        </textarea>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Actualizar Categoría</button>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton"
            data-bs-target="#deleteModal">Eliminar Categoría</button>
    </div>

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Está a punto de eliminar un registro de categoría.</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    Esto eliminará el registro de categoría de <b class="fw-bold">
                        <%= categoria.nombre %>
                    </b><br />
                    ¿Está seguro?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <form action="/edit/<%= categoria._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary">Si, Remover categoría</button>
                </form>
            </div>
        </div>
    </div>
</div>